# VoiceTrans Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# API Keys
# =============================================================================

# Fireworks AI API Key (for Whisper v3 transcription)
# Get your key from: https://fireworks.ai/
FIREWORKS_API_KEY=your_fireworks_api_key_here

# Google Gemini API Key (for translation)
# Get your key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# =============================================================================
# Application Settings
# =============================================================================

# Environment: production, staging, development
ENVIRONMENT=production

# Debug mode: true or false
# WARNING: Never set to true in production!
DEBUG=false

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# =============================================================================
# Server Configuration
# =============================================================================

# Server host (0.0.0.0 for all interfaces)
HOST=0.0.0.0

# Server port
PORT=8000

# =============================================================================
# CORS Settings
# =============================================================================

# Allowed origins (comma-separated)
# For development, you can add http://localhost:3000,http://localhost:5173
CORS_ORIGINS=https://voicetrans.app,https://www.voicetrans.app,https://voicetrans-frontend-c3ee1cda8c9d.herokuapp.com

# =============================================================================
# Performance Settings
# =============================================================================

# Enable translation caching
ENABLE_CACHE=true

# Cache TTL in seconds (3600 = 1 hour)
CACHE_TTL=3600

# Rate limiting (requests per minute)
RATE_LIMIT=60

# =============================================================================
# Audio Processing
# =============================================================================

# Audio sample rate (Hz)
# Common values: 16000, 24000, 48000
AUDIO_SAMPLE_RATE=16000

# Audio bit depth
# Common values: 16, 24
AUDIO_BIT_DEPTH=16

# Audio chunk duration (seconds)
AUDIO_CHUNK_DURATION=2.0

# =============================================================================
# Retry & Timeout Settings
# =============================================================================

# Maximum number of retries for failed API calls
MAX_RETRIES=3

# Minimum wait time between retries (seconds)
RETRY_MIN_WAIT=2

# Maximum wait time between retries (seconds)
RETRY_MAX_WAIT=10

# Request timeout (seconds)
REQUEST_TIMEOUT=30

# =============================================================================
# WebSocket Settings
# =============================================================================

# Heartbeat interval (seconds)
WEBSOCKET_HEARTBEAT_INTERVAL=30

# Maximum reconnection attempts
WEBSOCKET_MAX_RECONNECT_ATTEMPTS=5

# =============================================================================
# Optional: Database Configuration (for future use)
# =============================================================================

# DATABASE_URL=postgresql://user:password@localhost:5432/voicetrans
# REDIS_URL=redis://localhost:6379/0

# =============================================================================
# Optional: Monitoring & Analytics
# =============================================================================

# SENTRY_DSN=https://...
# GOOGLE_ANALYTICS_ID=UA-...
# PROMETHEUS_PORT=9090

# =============================================================================
# Notes
# =============================================================================
#
# - Never commit the .env file to version control!
# - Add .env to your .gitignore file
# - For Heroku deployment, set these as Config Vars in the dashboard
# - For local development, copy this file to .env and fill in your values
# - Restart the application after changing any settings
#
